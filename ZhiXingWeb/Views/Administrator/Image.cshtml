@{
    ViewBag.Title = "Image";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Scripts{
    <script src="~/Scripts/plupload/plupload.full.min.js"></script>
    <script src="~/Scripts/administrator/image.js"></script>
  
}  
<style>
    .progress {
        height: 4px;
        font-size: 0;
        line-height: 4px;
        background: orange;
        width: 0;
    }
 </style>
<div style="margin-bottom:10px;margin-top:10px;padding-left:10px;padding-top:10px;">
    <h4>图片列表</h4>
</div>
<table id="example" class="display" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th style="width:60px;"></th>
            <th>分类</th>
            <th>图片</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
<div style="border-top:2px solid #428bca;position:relative;padding-left:10px;">
    <h4>上传图片</h4> 
    <span>
        <button class="btn btn-default" data-target="#categoryModal" id="loadImage">选择图片(最大2M)</button>

        <button class="btn btn-default" data-target="#categoryModal" id="start_upload">开始上传</button>

        <label style="padding-left:10px;padding-right:5px;">上传分类</label><select name="upload-category" data-bind="options: categorys, optionsText:'Name', optionsValue:'Id', value: uploadSeletedCategory"></select>
    </span> 
</div> 
<div id="file-list"></div> 